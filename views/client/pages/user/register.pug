extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
  +alert-error(5000)
  .container.my-5
    .row.justify-content-center
      .col-8
        h1(class="text-center") Đăng ký tài khoản
        form(
          action="/user/register"
          method="POST"
        )
          div(class="form-group")
            label(for="fullName") Họ và tên
            input(
              type="text"
              class="form-control shadow-none"
              id="fullName"
              name="fullName"
              required
            )
          div(class="form-group")
            label(for="phone") Số điện thoại
            input(
              type="number"
              class="form-control shadow-none"
              id="phone"
              name="phone"
              required
            )
          div(class="form-group")
            label(for="email") Email
            input(
              type="email"
              class="form-control shadow-none"
              id="email"
              name="email"
              required
            )
          div(class="form-group")
            label(for="password") Mật khẩu
            input(
              type="password"
              class="form-control shadow-none"
              id="password"
              name="password"
              required
            )
          div(class="form-group")
            label(for="password_confirm") Xác nhận mật khẩu
            input(
              type="password"
              class="form-control shadow-none"
              id="password_confirm"
              name="password_confirm"
              required
            )
          
          div(class="form-group")
            button(
              type="submit"
              class="btn btn-dark shadow-none w-100"
            ) Đăng ký